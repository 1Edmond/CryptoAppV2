<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:CryptoAppV2.ViewModel"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
             xmlns:local="clr-namespace:CryptoAppV2.Custom"
             Shell.PresentationMode="ModalAnimated"
             x:Class="CryptoAppV2.View.Home.RSAPage">
    <ContentPage.Resources>
        <ControlTemplate x:Key="MyCustomTabHeader">
            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" WidthRequest="75" Margin="20,10">
                <Image Source="{TemplateBinding Icon}" WidthRequest="20" Aspect="AspectFill" HeightRequest="20" VerticalOptions="CenterAndExpand"  />
                <StackLayout Orientation="Vertical" HorizontalOptions="FillAndExpand" >
                    <Label Text="{TemplateBinding Text}" HorizontalOptions="Center"  />
                    <BoxView CornerRadius="180" IsVisible="{TemplateBinding IsSelected}" HorizontalOptions="CenterAndExpand" Color="#178FEB" WidthRequest="5" HeightRequest="5"/>
                </StackLayout>
            </StackLayout>
        </ControlTemplate>

    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout>
            <Grid RowDefinitions="70,*" VerticalOptions="FillAndExpand">
                <Frame HasShadow="True" CornerRadius="80" HorizontalOptions="FillAndExpand" Margin="20,10,20,0" xct:ShadowEffect.Color="Black" 
                       xct:ShadowEffect.Radius="4" xct:ShadowEffect.Opacity="0.7" Padding="0" >
                    <StackLayout HorizontalOptions="FillAndExpand" Margin="0" VerticalOptions="FillAndExpand">
                        <StackLayout BackgroundColor="#178FEB" VerticalOptions="FillAndExpand">
                            <Label Text="Cryptosystème RSA" TextColor="White" HorizontalOptions="CenterAndExpand" FontSize="22" />
                        </StackLayout>
                        <Label Text="Auteur : Ronald Rivest, Adi Shamir et Leonard Adleman" HorizontalTextAlignment="Center"
                           Margin="0,0,0,5" VerticalTextAlignment="Center" x:Name="MyHeader" TextColor="Black" />
                    </StackLayout>
                </Frame>
                <xct:TabView HorizontalOptions="FillAndExpand" IsTabTransitionEnabled="True" Grid.Row="1"
                                 x:Name="MyTabView" TabStripPlacement="Top" VerticalOptions="FillAndExpand">
                    <xct:TabViewItem ControlTemplate="{StaticResource MyCustomTabHeader}" Text="Codage" x:Name="CodageItem" Icon="fermer">
                        <Grid RowDefinitions="1.5*,*,80">
                            <StackLayout>
                                <Frame Padding="10,10" CornerRadius="30" BackgroundColor="#178FEB" xct:ShadowEffect.Color="Black" 
                                       HeightRequest="100"
                                       xct:ShadowEffect.Opacity="1" Margin="10,10,10,0" >
                                    <StackLayout Margin="0" BackgroundColor="#178FEB" HeightRequest="80" HorizontalOptions="FillAndExpand">
                                        <StackLayout Orientation="Horizontal" Margin="20,0">
                                            <ImageButton Source="{FontImage FontFamily=MesFonts,Color=White, Glyph={x:Static local:MesIcons.ArrowLeft}}" x:Name="BackCodageCarousselBtn" VerticalOptions="CenterAndExpand" BackgroundColor="Transparent">
                                            </ImageButton>
                                            <IndicatorView HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" Margin="0,15,0,0"
                                                   x:Name="MyCodageCarousselIndicator" SelectedIndicatorColor="White"
                                                   IndicatorColor="Gray" IndicatorsShape="Circle" />
                                            <ImageButton Source="{FontImage FontFamily=MesFonts,Color=White, Glyph={x:Static local:MesIcons.ArrowRight}}" x:Name="NextCodageCarousselBtn" BackgroundColor="Transparent">
                                            </ImageButton>
                                        </StackLayout>
                                        <CarouselView ItemsSource="{Binding RSA}" x:Name="MyCodageCaroussel" IndicatorView="MyCodageCarousselIndicator">
                                            <CarouselView.BindingContext>
                                                <vm:CryptoInformationVm/>
                                            </CarouselView.BindingContext>
                                            <CarouselView.ItemTemplate>
                                                <DataTemplate>
                                                    <StackLayout VerticalOptions="CenterAndExpand">
                                                        <Label Text="{Binding Description}" TextColor="White"
                                                           VerticalOptions="CenterAndExpand" HorizontalTextAlignment="Center"
                                                           VerticalTextAlignment="Center" FontSize="20"/>
                                                    </StackLayout>
                                                </DataTemplate>
                                            </CarouselView.ItemTemplate>
                                        </CarouselView>
                                    </StackLayout>
                                </Frame>
                                <!--
                                <StackLayout Orientation="Horizontal" Margin="50,10,0,0"  HorizontalOptions="FillAndExpand">
                                    <Label  Text="n = " FontSize="18" VerticalTextAlignment="Center" />
                                    <Frame CornerRadius="50" HeightRequest="50" xct:ShadowEffect.Color="Black" WidthRequest="100"
                                                 xct:ShadowEffect.Opacity="0.3" Padding="0,0,0,-10" x:Name="CodageNFrame" >
                                        <Entry HeightRequest="0" Margin="16,-10,0,0" x:Name="CodageNEntry" FontSize="17"
                                                    Keyboard="Text" TextColor="Black" ClearButtonVisibility="WhileEditing" />
                                    </Frame>
                                    <Label Margin="10,0,0,0"  Text="p = " FontSize="18" VerticalTextAlignment="Center" />
                                    <Frame CornerRadius="50" HeightRequest="50" xct:ShadowEffect.Color="Black" WidthRequest="100"
                                                 xct:ShadowEffect.Opacity="0.3" Padding="0,0,0,-10" x:Name="CodagePFrame" >
                                        <Entry HeightRequest="0" Margin="16,-10,0,0" x:Name="CodagePEntry" FontSize="17"
                                                    Keyboard="Text" TextColor="Black" ClearButtonVisibility="WhileEditing" />
                                    </Frame>
                                </StackLayout>
                                -->
                                <StackLayout>
                                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand" Margin="0,0,0,20">
                                        <StackLayout  Spacing="0" Orientation="Horizontal"  HorizontalOptions="FillAndExpand">
                                            <Label Text="e = "  Margin="30,0,0,0" HorizontalOptions="CenterAndExpand"  VerticalOptions="CenterAndExpand" FontSize="18"/>
                                            <Frame CornerRadius="50" HeightRequest="50" xct:ShadowEffect.Color="Black" WidthRequest="100" 
                                                         xct:ShadowEffect.Opacity="0.3" Padding="0,0,0,-10" x:Name="CodageEFrame" HorizontalOptions="CenterAndExpand" >
                                                <Entry HeightRequest="0" Margin="16,-10,0,0" x:Name="CodageEEntry" FontSize="17"
                                                            Keyboard="Numeric" TextColor="Black" ClearButtonVisibility="WhileEditing" />
                                            </Frame>
                                        </StackLayout>
                                        <StackLayout  Spacing="0" Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
                                            <Label Text="n = " WidthRequest="60" Margin="20,0,-30,0" VerticalOptions="CenterAndExpand" FontSize="18"/>
                                            <Frame CornerRadius="50" HeightRequest="50" xct:ShadowEffect.Color="Black" WidthRequest="100" 
                                                         xct:ShadowEffect.Opacity="0.3" Padding="0,0,0,-10" x:Name="CodageNFrame" HorizontalOptions="StartAndExpand" >
                                                <Entry HeightRequest="0" Margin="16,-10,0,0" x:Name="CodageNEntry" FontSize="17"
                                                            Keyboard="Numeric" TextColor="Black" ClearButtonVisibility="WhileEditing" />
                                            </Frame>
                                        </StackLayout>
                                    </StackLayout>
                                    <StackLayout  Spacing="0" HorizontalOptions="CenterAndExpand" WidthRequest="250">
                                        <Label Text="Text à coder" HorizontalOptions="CenterAndExpand" Margin="0,0,0,10"  FontSize="18"/>
                                        <Frame CornerRadius="50" HeightRequest="50" xct:ShadowEffect.Color="Black"
                                                xct:ShadowEffect.Opacity="0.3" Padding="0,0,0,-10" x:Name="CodageTextFrame" >
                                            <Entry HeightRequest="0" Margin="16,-10,0,0" x:Name="CodageTextEntry" FontSize="17"
                                                    Keyboard="Numeric" TextColor="Black" ClearButtonVisibility="WhileEditing" />
                                        </Frame>
                                    </StackLayout>

                                </StackLayout>
                            </StackLayout>
                            <StackLayout Grid.Row="1"  x:Name="CodageResultStack"  >
                                <Label Text="" Margin="0,0,0,10" TextColor="{AppThemeBinding Dark=white, Light=Black}" FontSize="19"
                                       HorizontalTextAlignment="Center"
                                       HorizontalOptions="CenterAndExpand" x:Name="CodageResult">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ResultCodageTap_Tapped" x:Name="ResultCodageTap" NumberOfTapsRequired="2" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </StackLayout>
                            <Grid Grid.Row="2" Margin="10,0,10,20">
                                <Button CornerRadius="180" HorizontalOptions="CenterAndExpand" Text="Coder" Margin="0,0,0,0" 
                                        x:Name="BtnCodage" VerticalOptions="EndAndExpand"
                                    HeightRequest="60" WidthRequest="64" TextTransform="None" TextColor="White" BackgroundColor="#178FEB" />
                                <ImageButton VerticalOptions="CenterAndExpand" IsVisible="false" BackgroundColor="#178FEB"
                                        x:Name="EtapeCodageBtn" Source="EtapeImg" WidthRequest="60" HeightRequest="60" 
                                        CornerRadius="90" HorizontalOptions="EndAndExpand" />
                            </Grid>
                        </Grid>
                    </xct:TabViewItem>

                    <xct:TabViewItem ControlTemplate="{StaticResource MyCustomTabHeader}" Text="Décodage" x:Name="DecodageItem" Icon="debloque">
                        <Grid RowDefinitions="1.5*,*,100">
                            <StackLayout>
                                <Frame Padding="10,10" CornerRadius="30" BackgroundColor="#178FEB" xct:ShadowEffect.Color="Black"
                                       HeightRequest="100"
                                       xct:ShadowEffect.Opacity="1" Margin="10,10,10,0" >
                                    <StackLayout Margin="0" BackgroundColor="#178FEB" HeightRequest="80" HorizontalOptions="FillAndExpand">
                                        <StackLayout Orientation="Horizontal" Margin="20,0">
                                            <ImageButton Source="{FontImage FontFamily=MesFonts,Color=White, Glyph={x:Static local:MesIcons.ArrowLeft}}" x:Name="BackDecodageCarousselBtn" 
                                                         VerticalOptions="CenterAndExpand" BackgroundColor="Transparent">
                                            </ImageButton>
                                            <IndicatorView HorizontalOptions="CenterAndExpand" VerticalOptions="StartAndExpand" Margin="0,15,0,0"
                                                   x:Name="MyCarousseDecodagelIndicator" SelectedIndicatorColor="White"
                                                   IndicatorColor="Gray" IndicatorsShape="Circle" />
                                            <ImageButton Source="{FontImage FontFamily=MesFonts,Color=White, Glyph={x:Static local:MesIcons.ArrowRight}}" x:Name="NextDecodageCarousselBtn" BackgroundColor="Transparent">
                                            </ImageButton>
                                        </StackLayout>
                                        <CarouselView ItemsSource="{Binding RSA}" x:Name="MyDecodageCaroussel" IndicatorView="MyCarousseDecodagelIndicator">
                                            <CarouselView.BindingContext>
                                                <vm:CryptoInformationVm/>
                                            </CarouselView.BindingContext>
                                            <CarouselView.ItemTemplate>
                                                <DataTemplate>
                                                    <StackLayout VerticalOptions="CenterAndExpand">
                                                        <Label Text="{Binding Description}" TextColor="White"
                                                           VerticalOptions="CenterAndExpand" HorizontalTextAlignment="Center"
                                                           VerticalTextAlignment="Center" FontSize="20"/>
                                                    </StackLayout>
                                                </DataTemplate>
                                            </CarouselView.ItemTemplate>
                                        </CarouselView>
                                    </StackLayout>
                                </Frame>
                                <StackLayout>
                                    <StackLayout Orientation="Horizontal"  Margin="30,10,0,10">
                                        <StackLayout  Spacing="0"  Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
                                            <Label Text="e = " HorizontalOptions="CenterAndExpand" Margin="0,0,5,0" VerticalOptions="CenterAndExpand" FontSize="18"/>
                                            <Frame CornerRadius="50" HeightRequest="50" xct:ShadowEffect.Color="Black" WidthRequest="100" 
                                                         xct:ShadowEffect.Opacity="0.3" Padding="0,0,0,-10" x:Name="DecodageEFrame" HorizontalOptions="StartAndExpand" >
                                                <Entry HeightRequest="0" Margin="16,-10,0,0" x:Name="DecodageEEntry" FontSize="17"
                                                            Keyboard="Numeric" TextColor="Black" ClearButtonVisibility="WhileEditing" />
                                            </Frame>
                                        </StackLayout>
                                        <StackLayout  Spacing="0" Orientation="Horizontal" HorizontalOptions="FillAndExpand" >
                                            <Label Text="n = " WidthRequest="60" Margin="20,0,-30,0" VerticalOptions="CenterAndExpand" FontSize="18"/>
                                            <Frame CornerRadius="50" HeightRequest="50" xct:ShadowEffect.Color="Black" WidthRequest="100" 
                                                         xct:ShadowEffect.Opacity="0.3" Padding="0,0,0,-10" x:Name="DecodageNFrame" HorizontalOptions="StartAndExpand" >
                                                <Entry HeightRequest="0" Margin="16,-10,0,0" x:Name="DecodageNEntry" FontSize="17"
                                                            Keyboard="Numeric" TextColor="Black" ClearButtonVisibility="WhileEditing" />
                                            </Frame>
                                        </StackLayout>
                                    </StackLayout>
                                    <StackLayout  Spacing="0" HorizontalOptions="CenterAndExpand" WidthRequest="250">
                                        <Label Text="Text à coder" Margin="0,0,0,5" HorizontalOptions="CenterAndExpand"  FontSize="18"/>
                                        <Frame CornerRadius="50" HeightRequest="50" xct:ShadowEffect.Color="Black"
                                                xct:ShadowEffect.Opacity="0.3" Padding="0,0,0,-10" x:Name="DecodageTextFrame" >
                                            <Entry HeightRequest="0" Margin="16,-10,0,0" x:Name="DecodageTextEntry" FontSize="17"
                                                    Keyboard="Numeric" TextColor="Black" ClearButtonVisibility="WhileEditing" />
                                        </Frame>
                                    </StackLayout>

                                </StackLayout>
                            </StackLayout>
                            <StackLayout Grid.Row="1"  x:Name="DecodageResultStack"   >
                                <Label Text="" Margin="0,0,0,10" FontSize="19" TextColor="{AppThemeBinding Dark=white, Light=Black}" 
                                       HorizontalTextAlignment="Center"
                                       HorizontalOptions="CenterAndExpand" x:Name="DecodageResult" >
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer x:Name="DecodageResultTap" Tapped="DecodageResultTap_Tapped" NumberOfTapsRequired="2" />
                                    </Label.GestureRecognizers>
                                </Label>
                            </StackLayout>
                            <Grid Grid.Row="2" Margin="10,0,10,20">
                                <Button CornerRadius="180" HorizontalOptions="CenterAndExpand" Text="Décoder" Margin="0,0,0,0" x:Name="BtnDecodage" VerticalOptions="EndAndExpand"
                                    HeightRequest="80" WidthRequest="80" TextTransform="None" TextColor="White" BackgroundColor="#178FEB" />
                                <ImageButton VerticalOptions="CenterAndExpand" Source="EtapeImg" IsVisible="false"
                                        BackgroundColor="#178FEB" 
                                        x:Name="EtapeDecodageBtn" WidthRequest="80" HeightRequest="80"
                                        CornerRadius="90" HorizontalOptions="EndAndExpand" />
                            </Grid>
                        </Grid>
                    </xct:TabViewItem>
                </xct:TabView>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>