                <Grid x:Name="RSAPrive" VerticalOptions="FillAndExpand" IsVisible="false" >
                    <StackLayout Orientation="Vertical">
                        <Label TextColor="{AppThemeBinding Dark=Black, Light=Black}" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center"
                               FontSize="17" Margin="20,10"
                               Text="La clé publique est (n,e). Saisissez ces valeurs pour pouvoir calculer la clé privée" />
                        <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Margin="0,0,10,20">
