                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.Footer>
                                <Grid>
                                    <Label Text="" HorizontalOptions="CenterAndExpand" TextColor="{AppThemeBinding Dark=Black, Light=Black}" HorizontalTextAlignment="Center" 
                                       x:Name="FrequenceCaractereListeResult" FontSize="20"  />
                                </Grid>
                            </ListView.Footer>
                        </ListView>
