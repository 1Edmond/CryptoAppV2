                                <Entry HeightRequest="0" Margin="16,-10,0,0"  FontSize="17" x:Name="BinaireEntry"
                                       HorizontalTextAlignment="Center" Placeholder="Saisissez le nombre"  PlaceholderColor="{AppThemeBinding Dark=Black, Light=Black}"
                                       Keyboard="Numeric" ClearButtonVisibility="WhileEditing"  
