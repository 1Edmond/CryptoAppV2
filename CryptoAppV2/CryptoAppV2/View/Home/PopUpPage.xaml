<?xml version="1.0" encoding="utf-8" ?>
<xct:Popup xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:xct="http://xamarin.com/schemas/2020/toolkit"
                   HorizontalOptions="CenterAndExpand"
             Size="300,550"
           xmlns:vm="clr-namespace:CryptoAppV2.ViewModel"
             VerticalOptions="CenterAndExpand"
             x:Class="CryptoAppV2.View.Home.PopUpPage">

    <xct:Popup.Resources>
        <Style TargetType="Label">
            <Setter Property="TextColor" Value="{AppThemeBinding Dark=Black, Light=Black}" />
        </Style>
        <Style TargetType="Entry">
            <Setter Property="TextColor" Value="{AppThemeBinding Dark=Black, Light=Black}"/>
            <Setter Property="PlaceholderColor" Value="{AppThemeBinding Dark=Black, Light=Black}"/>
        </Style>
    </xct:Popup.Resources>
    <xct:Popup.Content>
        <Grid RowDefinitions="70,*,100">
            <Frame HasShadow="True" CornerRadius="80" HorizontalOptions="FillAndExpand" Margin="20,10,20,0" xct:ShadowEffect.Color="Black" 
               xct:ShadowEffect.Radius="4"
               xct:ShadowEffect.Opacity="0.7" Padding="0" >
                <StackLayout HorizontalOptions="FillAndExpand" Margin="0" VerticalOptions="FillAndExpand">
                    <StackLayout BackgroundColor="#178FEB" VerticalOptions="FillAndExpand">
                        <Label TextColor="{AppThemeBinding Dark=White, Light=White}" Text="Fonction"  HorizontalOptions="CenterAndExpand" FontSize="22" />
                    </StackLayout>
                    <Label TextColor="{AppThemeBinding Dark=Black, Light=Black}" Text="Liste des différents cryptosystèmes" HorizontalTextAlignment="Center"
                           Margin="0,0,0,5" VerticalTextAlignment="Center" FontSize="13" x:Name="MyHeader" />
                </StackLayout>
            </Frame>
            <Grid Grid.Row="1">
                <Grid x:Name="Diviseur" RowDefinitions="60,*" Margin="0,20,0,0" IsVisible="false" VerticalOptions="FillAndExpand">
                    <StackLayout Orientation="Horizontal" Margin="0,20,0,0">
                        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="0,0,10,0">
                            <Frame CornerRadius="50" HeightRequest="25" WidthRequest="220"
                                   xct:ShadowEffect.Color="Black" x:Name="DiviseurFrame"
                                   xct:ShadowEffect.Opacity="0.3" Padding="0,0,0,-10" >
                                <Entry HeightRequest="0" Margin="16,-10,0,0"  FontSize="17" x:Name="DiviseurEntry"
                                       HorizontalTextAlignment="Center" Placeholder="Saisissez le nombre" PlaceholderColor="{AppThemeBinding Dark=Black, Light=Black}"
                                       Keyboard="Numeric" ClearButtonVisibility="WhileEditing"  
                                       TextColor="Black"/>
                            </Frame>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout Grid.Row="1" Margin="10" x:Name="DiviseurStack" HorizontalOptions="FillAndExpand" IsVisible="false" >
                        <Label  Text="Les diviseurs de" HorizontalOptions="CenterAndExpand" TextColor="Black" HorizontalTextAlignment="Center" x:Name="DiviseurResult" FontSize="20" />
                        <ListView x:Name="DiviseurEtape" SelectionMode="None" SeparatorVisibility="Default" SeparatorColor="Gray" >
                            <ListView.Header>
                                <Grid>
                                    <Label  HorizontalOptions="CenterAndExpand" Text="Vérification" TextColor="{AppThemeBinding Dark=Black, Light=Black}" FontSize="20"  />
                                </Grid>
                            </ListView.Header>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout>
                                            <Label  Text="{Binding Info}" FontSize="17" HorizontalTextAlignment="Center"
                                               TextColor="{AppThemeBinding Dark=Black, Light=Black}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.Footer>
                                <Grid>
                                    <Label Text="" HorizontalOptions="CenterAndExpand" TextColor="{AppThemeBinding Dark=Black, Light=Black}" HorizontalTextAlignment="Center" 
                                       x:Name="DiviseurListeResult" FontSize="20"  />
                                </Grid>
                            </ListView.Footer>
                        </ListView>
                    </StackLayout>
                </Grid>
                <!-- Fait -->
                <Grid x:Name="UnPremier" RowDefinitions="60,*" VerticalOptions="FillAndExpand" IsVisible="false">
                    <StackLayout Orientation="Horizontal" Margin="0,20,0,0">
                        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" Margin="0,0,10,0">
                            <Frame CornerRadius="50" HeightRequest="25" WidthRequest="220"
                                   xct:ShadowEffect.Color="Black" x:Name="UnPremierFrame"
                                   xct:ShadowEffect.Opacity="0.3" Padding="0,0,0,-10" >
                                <Entry HeightRequest="0" Margin="16,-10,0,0"  FontSize="17" x:Name="UnPremierEntry"
                                       HorizontalTextAlignment="Center" Placeholder="Saisissez le nombre"  PlaceholderColor="{AppThemeBinding Dark=Black, Light=Black}"
                                       Keyboard="Numeric" ClearButtonVisibility="WhileEditing" 
                                       TextColor="Black"/>
                            </Frame>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout Grid.Row="1" Margin="10" x:Name="UnPremierStack" HorizontalOptions="FillAndExpand" IsVisible="false" >
                        <Label  Text="Les diviseurs de" HorizontalOptions="CenterAndExpand" TextColor="{AppThemeBinding Dark=Black, Light=Black}" HorizontalTextAlignment="Center" x:Name="UnPremierResult" FontSize="20" />
                        <ListView x:Name="UnPremierEtape" SelectionMode="None" SeparatorVisibility="Default" SeparatorColor="Gray" >
