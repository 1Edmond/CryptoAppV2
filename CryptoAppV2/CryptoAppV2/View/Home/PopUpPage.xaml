                                <Grid>
                                    <Label HorizontalOptions="CenterAndExpand" Text="Vérification : Liste des diviseurs" TextColor="{AppThemeBinding Dark=Black, Light=Black}" FontSize="20"  />
                                </Grid>
                            </ListView.Header>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout>
                                            <Label Text="{Binding Info}" FontSize="17" TextColor="{AppThemeBinding Dark=Black, Light=Black}"
                                               HorizontalTextAlignment="Center"
                                               VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.Footer>
                                <Grid>
                                    <Label Text="" HorizontalOptions="CenterAndExpand" TextColor="{AppThemeBinding Dark=Black, Light=Black}" HorizontalTextAlignment="Center" 
                                       x:Name="UnPremierListeResult" FontSize="20"  />
                                </Grid>
                            </ListView.Footer>
                        </ListView>
                    </StackLayout>
                </Grid>
                <!-- Fait -->
