                                </Grid>
                            </ListView.Header>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout>
                                            <Label  Text="{Binding Info}" FontSize="17" TextColor="{AppThemeBinding Dark=Black, Light=Black}"
                                               HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.Footer>
                                <Grid>
                                    <Label  Text="" HorizontalOptions="CenterAndExpand" TextColor="{AppThemeBinding Dark=Black, Light=Black}" HorizontalTextAlignment="Center" 
                                       x:Name="ChiffrementListeResult" FontSize="20"  />
                                </Grid>
                            </ListView.Footer>
                        </ListView>
                    </StackLayout>
                </Grid>
                <!-- Fait -->
                <Grid x:Name="InverseModulaire" VerticalOptions="FillAndExpand" IsVisible="false">
                    <StackLayout Orientation="Vertical">
                        <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Margin="0,0,10,20">
                            <Label  Text="Nombre = " FontSize="20" TextColor="Black" Margin="10,0,0,0" VerticalTextAlignment="Center"/>
                            <Frame CornerRadius="50" HeightRequest="50" WidthRequest="100"
                                               xct:ShadowEffect.Color="Black" x:Name="InverseModulaireNbrFrame"
                                               xct:ShadowEffect.Opacity="0.3" Padding="0,0,0,-10" >
