                                     Margin="0,0,10,10">
                            <Label TextColor="{AppThemeBinding Dark=Black, Light=Black}" Text="Nombre 2 = " FontSize="20" VerticalTextAlignment="Center" Margin="10,0,0,0"/>
                            <Frame CornerRadius="50" HeightRequest="50" WidthRequest="100"
                                               x:Name="DeuxPremierNbr2Frame"
                                               xct:ShadowEffect.Color="Black"
                                               xct:ShadowEffect.Opacity="0.3" Padding="0,0,0,-10" >
                                <Entry HeightRequest="0" Margin="16,-10,0,0"  FontSize="17" x:Name="DeuxPremierNbr2Entry"
                                                   Keyboard="Numeric" ClearButtonVisibility="WhileEditing"  HorizontalTextAlignment="Center"
                                                   TextColor="Black"/>
                            </Frame>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout Grid.Row="1" Margin="10" x:Name="DeuxPremierStack" HorizontalOptions="FillAndExpand" IsVisible="false" >
                        <Label  Text="Les diviseurs de" HorizontalOptions="CenterAndExpand" TextColor="{AppThemeBinding Dark=Black, Light=Black}" HorizontalTextAlignment="Center" x:Name="DeuxPremierResult" FontSize="20" />
                        <ListView x:Name="DeuxPremierEtape" SelectionMode="None" SeparatorVisibility="Default" SeparatorColor="Gray" >
                            <ListView.Header>
                                <Grid>
                                    <Label  HorizontalOptions="CenterAndExpand" Text="Vérification" TextColor="{AppThemeBinding Dark=Black, Light=Black}" FontSize="20"  />
                                </Grid>
                            </ListView.Header>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <ViewCell>
                                        <StackLayout>
                                            <Label  Text="{Binding Info}" FontSize="17" HorizontalTextAlignment="Center"
                                               TextColor="{AppThemeBinding Dark=Black, Light=Black}" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
                                        </StackLayout>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                            <ListView.Footer>
                                <Grid>
                                    <Label  Text="" HorizontalOptions="CenterAndExpand" TextColor="{AppThemeBinding Dark=Black, Light=Black}" HorizontalTextAlignment="Center" 
                                       x:Name="DeuxPremierListeResult" FontSize="20"  />
                                </Grid>
                            </ListView.Footer>
                        </ListView>
                    </StackLayout>
                </Grid>
                <!-- Fait -->
                <Grid x:Name="Chiffrement" RowDefinitions="100,*" Margin="0,20,0,0" VerticalOptions="FillAndExpand" IsVisible="false" >
                    <StackLayout Orientation="Vertical">
                        <StackLayout Orientation="Horizontal" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Margin="0,0,10,20">
                            <Label TextColor="{AppThemeBinding Dark=Black, Light=Black}" Text="Caractère = " FontSize="20" Margin="0" VerticalTextAlignment="Center"/>
                            <Frame CornerRadius="50" HeightRequest="50" WidthRequest="100" 
                                               xct:ShadowEffect.Color="Black" x:Name="ChiffrementCaractereFrame"
                                               xct:ShadowEffect.Opacity="0.3" Padding="0,0,0,-10" >
                                <Entry HeightRequest="0" Margin="16,-10,0,0"  FontSize="17" x:Name="ChiffrementCaractereEntry" HorizontalTextAlignment="Center"
                                                   Keyboard="Text" ClearButtonVisibility="WhileEditing"  
                                                   TextColor="Black"/>
                            </Frame>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"
                                     Margin="0,0,10,10">
                            <Label TextColor="{AppThemeBinding Dark=Black, Light=Black}" Text="Base = " FontSize="20" VerticalTextAlignment="Center" Margin="10,0,0,0"/>
                            <Frame CornerRadius="50" HeightRequest="50" WidthRequest="100"
                                               x:Name="ChiffrementBaseFrame"
                                               xct:ShadowEffect.Color="Black"
                                               xct:ShadowEffect.Opacity="0.3" Padding="0,0,0,-10" >
                                <Picker ItemsSource="{Binding Modeles}" SelectedItem="{Binding SelectedItem}" Title="Liste de vos modèles" 
                                                        x:Name="ChiffrementBaseEntry" HorizontalOptions="FillAndExpand"
                                                     ItemDisplayBinding="{Binding Nom}"  >
                                    <Picker.BindingContext>
                                        <vm:UserModeleVm/>
                                    </Picker.BindingContext>
                                </Picker>
                            </Frame>
                        </StackLayout>
                    </StackLayout>
                    <StackLayout Grid.Row="1" Margin="10" x:Name="ChiffrementStack" HorizontalOptions="FillAndExpand" IsVisible="false" >
                        <Label  Text="Les diviseurs de" HorizontalOptions="CenterAndExpand" TextColor="{AppThemeBinding Dark=Black, Light=Black}" HorizontalTextAlignment="Center" x:Name="ChiffrementResult" FontSize="20" />
                        <ListView x:Name="ChiffrementEtape" SelectionMode="None" SeparatorVisibility="Default" SeparatorColor="Gray" >
